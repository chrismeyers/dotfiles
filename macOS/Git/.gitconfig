[alias]
	aliases = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\ \t => \\2/' | sort
	all = add . --all
	amend = !git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
	st = status
	details = log -n1 -p --format=fuller
	untracked = ls-files --others --exclude-standard
	updatesubs = submodule update --recursive --remote
[core]
	editor = nvim
	excludesfile = /Users/chris/.gitignore_global
	autocrlf = input
[credential]
	helper = osxkeychain
[user]
	name = Chris Meyers
	email = chris@chrismeyers.net
	signingkey = /Users/chris/.ssh/id_ed25519_git.pub
[push]
	default = simple
[pull]
	rebase = false
[init]
	defaultBranch = main
[gpg]
	format = ssh
[commit]
	gpgsign = true
[tag]
	gpgsign = true
[gpg "ssh"]
	allowedSignersFile = /Users/chris/.config/git/allowed-signers
