[alias]
	aliases = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\ \t => \\2/' | sort
	all = add . --all
	amend = !git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
	st = status
	details = log -n1 -p --format=fuller
	untracked = ls-files --others --exclude-standard
	updatesubs = submodule update --recursive --remote
[core]
	editor = nvim
	autocrlf = input
	whitespace = trailing-space
[credential]
	helper = osxkeychain
[user]
	name = Chris Meyers
	email = chris.meyers@madwire.com
	signingkey = /Users/chris/.ssh/id_ed25519_git.pub
[push]
	default = simple
	autoSetupRemote = true
[pull]
	rebase = false
[init]
	defaultBranch = main
[gpg]
	format = ssh
[commit]
	gpgsign = true
[tag]
	gpgsign = true
	sort = -version:refname
[gpg "ssh"]
	allowedSignersFile = /Users/chris/.config/git/allowed_signers
[status]
	branch = true
[rerere]
	enabled = true
	autoUpdate = true
[help]
	autocorrect = prompt
