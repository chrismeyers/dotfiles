{
  // Get off my lawn (Telemetry)
  "telemetry.enableTelemetry": false,
  "redhat.telemetry.enabled": false,

  // General editor settings (Editor)
  "editor.tabSize": 2,
  "editor.autoIndent": "full",
  "editor.insertSpaces": true,
  "editor.lineNumbers": "on",
  "editor.fontFamily": "Hack",
  "editor.fontSize": 12,
  "editor.minimap.showSlider": "always",
  "editor.suggestSelection": "first",
  "editor.formatOnSave": false,

  // File settings (Files)
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // Git settings
  "git.autoRepositoryDetection": "openEditors",

  // Language overrides (Default Configuration Overrides)
  "[go]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },

  "[python]": {
    "editor.tabSize": 4
  },

  "[dart]": {
    "editor.formatOnSave": true
  },

  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[vue]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[yaml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },

  // OS File system interaction (File Explorer)
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // UI settings (Workbench)
  "workbench.editor.untitled.hint": "hidden",
  "workbench.colorTheme": "Nord",
  "workbench.iconTheme": "vscode-icons",

  // Windows integrated terminal settings
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",

  // Extensions
  "latex-workshop.view.pdf.viewer": "tab",

  "go.formatTool": "goimports",
  "go.useLanguageServer": true,

  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },

  "python.languageServer": "Microsoft",
  "python.showStartPage": false,

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "prettier.singleQuote": true,

  "yaml.format.singleQuote": true,

  "gitlens.defaultTimeFormat": "HH:mm",
  "gitlens.defaultDateFormat": "MMMM Do, YYYY HH:mm",
  "gitlens.statusBar.enabled": false,
  "gitlens.codeLens.scopes": [
    "document"
  ],
  "gitlens.codeLens.recentChange.command": "gitlens.diffWithPrevious"
}
