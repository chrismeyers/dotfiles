{
  // Get off my lawn (Telemetry)
  "telemetry.telemetryLevel": "off",
  "gitlens.telemetry.enabled": false,

  // General editor settings (Editor)
  "editor.tabSize": 2,
  "editor.autoIndent": "full",
  "editor.insertSpaces": true,
  "editor.lineNumbers": "on",
  "editor.fontFamily": "Hack",
  "editor.fontSize": 12,
  "editor.minimap.showSlider": "always",
  "editor.suggestSelection": "first",
  "editor.formatOnSave": false,

  // File settings (Files)
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.eol": "\n",

  // Window settings (Window)
  "window.commandCenter": false,

  // Language overrides (Default Configuration Overrides)
  "[go]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "golang.go",
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },

  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.tabSize": 4
  },

  "[javascript][typescript][javascriptreact][typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },

  // OS File system interaction (File Explorer)
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // UI settings (Workbench)
  "workbench.editor.empty.hint": "hidden",
  "workbench.colorTheme": "Tokyo Night Storm",
  "workbench.iconTheme": "vscode-icons",

  // Extensions
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.recipe.default": "latexmk (xelatex)", // XeLaTeX is used for smaller PDF file sizes

  "go.formatTool": "goimports",
  "go.useLanguageServer": true,

  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },

  "python.languageServer": "Default",

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",

  "gitlens.defaultTimeFormat": "HH:mm",
  "gitlens.defaultDateFormat": "MMMM Do, YYYY HH:mm",
  "gitlens.statusBar.enabled": false,
  "gitlens.codeLens.scopes": [
    "document"
  ],
  "gitlens.codeLens.recentChange.command": "gitlens.diffWithPrevious",
  "gitlens.launchpad.indicator.enabled": false,

  "cSpell.useCustomDecorations": false,

  "github.copilot.nextEditSuggestions.enabled": true
}
