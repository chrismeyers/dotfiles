{
  // Get off my lawn, Microsoft (Telemetry)
  "telemetry.enableTelemetry": false,

  // General editor settings (Editor)
  "editor.tabSize": 2,
  "editor.autoIndent": true,
  "editor.insertSpaces": true,
  "editor.lineNumbers": "on",
  "editor.fontFamily": "Hack",
  "editor.fontSize": 12,
  "editor.minimap.showSlider": "always",

  // File settings (Files)
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // Language overrides (Default Configuration Overrides)
  "[go]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },

  "[python]": {
    "editor.tabSize": 4
  },

  // OS File system interaction (File Explorer)
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // UI settings (Workbench)
  "workbench.colorTheme": "Ayu Mirage Bordered",
  "workbench.iconTheme": "ayu",

  // Windows integrated terminal settings
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",

  // Extensions
  "latex-workshop.view.pdf.viewer": "tab",
  "go.formatTool": "goimports",
  "go.toolsEnvVars": {
    "GO111MODULE": "on"
  },
  "go.useLanguageServer": true
}
