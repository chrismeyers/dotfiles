{
  // Get off my lawn, Microsoft (Telemetry)
  "telemetry.enableTelemetry": false,

  // General editor settings (Editor)
  "editor.tabSize": 2,
  "editor.autoIndent": "full",
  "editor.insertSpaces": true,
  "editor.lineNumbers": "on",
  "editor.fontFamily": "Hack",
  "editor.fontSize": 12,
  "editor.minimap.showSlider": "always",
  "editor.suggestSelection": "first",
  "editor.formatOnSave": false,

  // File settings (Files)
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // Language overrides (Default Configuration Overrides)
  "[go]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },

  "[python]": {
    "editor.tabSize": 4
  },

  "[dart]": {
    "editor.formatOnSave": true
  },

  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[vue]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // OS File system interaction (File Explorer)
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // UI settings (Workbench)
  "workbench.colorTheme": "Ayu Mirage Bordered",
  "workbench.iconTheme": "vscode-icons",

  // Windows integrated terminal settings
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",

  // Extensions
  "latex-workshop.view.pdf.viewer": "tab",

  "go.formatTool": "goimports",
  "go.useLanguageServer": true,

  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },

  "python.languageServer": "Microsoft",
  "python.showStartPage": false,

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "prettier.singleQuote": true,
  "workbench.editorAssociations": [
    {
      "viewType": "jupyter.notebook.ipynb",
      "filenamePattern": "*.ipynb"
    }
  ]
}
