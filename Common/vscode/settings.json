{
  // Get off my lawn (Telemetry)
  "telemetry.telemetryLevel": "off",

  // General editor settings (Editor)
  "editor.tabSize": 2,
  "editor.autoIndent": "full",
  "editor.insertSpaces": true,
  "editor.lineNumbers": "on",
  "editor.fontFamily": "Hack",
  "editor.fontSize": 12,
  "editor.minimap.showSlider": "always",
  "editor.suggestSelection": "first",
  "editor.formatOnSave": false,
  "editor.renderWhitespace": "selection",

  // File settings (Files)
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.eol": "\n",

  // Window settings (Window)
  "window.commandCenter": false,

  // Language overrides (Default Configuration Overrides)
  "[go]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "golang.go",
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },

  "[c][cpp]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.tabSize": 4
  },

  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.tabSize": 4
  },

  "[javascript][typescript][javascriptreact][typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },

  // OS File system interaction (File Explorer)
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // UI settings (Workbench)
  "workbench.editor.empty.hint": "hidden",
  "workbench.colorTheme": "Tokyo Night Storm",
  "workbench.iconTheme": "vscode-icons",
  "workbench.activityBar.location": "top",
  "workbench.colorCustomizations": {
    "editorWhitespace.foreground": "#a9b1d6"
  },

  // Extensions
  "extensions.ignoreRecommendations": true,

  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.recipe.default": "latexmk (xelatex)", // XeLaTeX is used for smaller PDF file sizes

  "go.formatTool": "goimports",
  "go.useLanguageServer": true,

  "C_Cpp.clang_format_style": "file",
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: LLVM, IndentWidth: 4, UseTab: Never, ColumnLimit: 80, BreakBeforeBraces: Linux, AllowShortIfStatementsOnASingleLine: AllIfsAndElse, AllowShortFunctionsOnASingleLine: InlineOnly }",
  "C_Cpp.autoAddFileAssociations": false,

  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },

  "python.languageServer": "Default",

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",

  "git.blame.editorDecoration.enabled": true,
  "git.blame.statusBarItem.enabled": false,
  "git.autoRepositoryDetection": "openEditors",

  "github.copilot.nextEditSuggestions.enabled": true,

  "cSpell.useCustomDecorations": false
}
